{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/scan": {
            "post": {
                "description": "Scan the email message for malicious content",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Scan email for viruses",
                "parameters": [
                    {
                        "description": "Email to scan",
                        "name": "email",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/main.EmailRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/main.ScanResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "main.EmailRequest": {
            "type": "object",
            "properties": {
                "body": {
                    "type": "string"
                },
                "recipient": {
                    "type": "string"
                },
                "sender": {
                    "type": "string"
                }
            }
        },
        "main.ScanResponse": {
            "type": "object",
            "properties": {
                "is_malicious": {
                    "type": "boolean"
                },
                "reason": {
                    "type": "string"
                }
            }
        }
    }
}